{
  "api_settings": {
    "model": "qwen-plus",
    "temperature": 0.7,
    "max_tokens": 1500,
    "timeout": 120
  },
  "output_settings": {
    "svg_directory": "generated_svgs",
    "ppt_directory": "ppt_presentations",
    "progress_file": "svg_progress.json"
  },
  "svg_template": {
    "width": 1920,
    "height": 1080,
    "background_color": "#f8fafc",
    "title_font_size": 48,
    "content_font_size": 28,
    "color_scheme": {
      "primary": "#2563eb",
      "secondary": "#60a5fa", 
      "accent": "#1e40af",
      "text": "#1e293b",
      "light_text": "#64748b"
    }
  },
  "processing_settings": {
    "concurrent_limit": 3,
    "retry_attempts": 3,
    "content_preview_length": 800,
    "title_max_length": 60,
    "filename_safe_chars": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_-"
  },
  "ppt_settings": {
    "slide_width_inches": 13.33,
    "slide_height_inches": 7.5,
    "footer_text": "技术文档可视化展示",
    "show_slide_numbers": true
  }
}